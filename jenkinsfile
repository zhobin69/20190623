pipeline {
	agent any
	tools {
		jdk 'jdk8'
		maven 'maven-3'
	}
	stages {
		stage('Initialize') {
			steps {
				sh '''
					echo "PATH=${PATH}"
					echo "M2_HOME=${M2_HOME}"
				'''
			}
		}
		
		stage('Build') {
			steps {
				sh 'echo ${PATH}'
			}
		
			post {
				success {
					junit 'target/surefire-reports/**/*.xml'
				}
			}	
		}
	}
}
