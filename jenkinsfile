pipeline {
	agent any
	tools {
		jdk 'jdk'
		maven 'maven'
	}
	stages {
		stage('Initialize') {
			steps {
				sh '''
					echo "PATH=${PATH}"
				'''
			}
		}
		
		stage('Build') {
			steps {
				sh 'echo ${PATH}'
				sh 'echo "**************"'
				sh 'mvn -version'
			}
		
			post {
				success {
					junit 'target/surefire-reports/**/*.xml'
				}
			}	
		}
	}
}
